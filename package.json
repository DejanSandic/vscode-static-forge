{
	"name": "vscode-static-forge",
	"displayName": "vscode-static-forge",
	"description": "Static forge for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DejanSandic/vscode-static-forge.git"
	},
	"author": "Dejan Sandic - Deyo",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/DejanSandic/vscode-static-forge/issues"
	},
	"homepage": "https://github.com/DejanSandic/vscode-static-forge#readme",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:forge.helloWorld",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "forge.helloWorld",
				"title": "Hello World",
				"icon": {
					"light": "assets/logo.png",
					"dark": "assets/logo.png"
				}
			},
			{
				"command": "forge.start",
				"title": "Start the forge",
				"icon": {
					"light": "assets/icons/play.png",
					"dark": "assets/icons/play.png"
				}
			},
			{
				"command": "forge.restart",
				"title": "Restart the forge",
				"icon": {
					"light": "assets/icons/restart.png",
					"dark": "assets/icons/restart.png"
				}
			},
			{
				"command": "forge.stop",
				"title": "Stop the forge",
				"icon": {
					"light": "assets/icons/stop.png",
					"dark": "assets/icons/stop.png"
				}
			},
			{
				"command": "forge.browser",
				"title": "Open the browser",
				"icon": {
					"light": "assets/icons/browser.png",
					"dark": "assets/icons/browser.png"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "static-forge",
					"title": "Static Forge",
					"icon": "assets/logo.png"
				}
			]
		},
		"views": {
			"static-forge": [
				{
					"id": "forgeTree",
					"name": ""
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "forge.start",
					"group": "navigation",
					"when": "!running"
				},
				{
					"command": "forge.restart",
					"group": "navigation",
					"when": "running"
				},
				{
					"command": "forge.stop",
					"group": "navigation",
					"when": "running"
				},
				{
					"command": "forge.browser",
					"group": "navigation",
					"when": "running"
				}
			],
			"view/item/context": [
				{
					"command": "forge.start",
					"group": "inline",
					"when": "viewItem == page"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/express": "^4.17.2",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/sass": "^1.16.0",
		"@types/socket.io": "^2.1.4",
		"@types/uuid": "^3.4.6",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"chokidar": "^3.3.0",
		"express": "^4.17.1",
		"get-port": "^5.0.0",
		"open": "^7.0.0",
		"sass": "^1.23.7",
		"socket.io": "^2.3.0",
		"uuid": "^3.3.3"
	}
}
